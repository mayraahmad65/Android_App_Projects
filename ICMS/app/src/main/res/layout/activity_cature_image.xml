<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightpink"
    tools:context="com.example.ahmedpc.icms.CatureImageActivity"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:layout_weight="5"
        android:background="@drawable/icms_imageview_style"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/icms_background_two" />


    <Button
        android:id="@+id/icms_btn_capture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/icms_button_style"
        android:gravity="center"
        android:text="Capture Image"
        android:textColor="@color/brown"
        android:textSize="30sp"
        android:textStyle="italic|bold" />


    <Button
        android:id="@+id/icms_btn_done"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/icms_button_style"
        android:text="Done"
        android:textColor="@color/brown"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center" />


</LinearLayout>
