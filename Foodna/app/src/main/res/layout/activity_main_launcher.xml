<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/im_foodna_background"
    tools:context="com.example.ahmedpc.foodna.MainLauncherActivity"
    tools:layout_editor_absoluteY="25dp">


    <ImageView
        android:id="@+id/foodna_img_emoji"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="197dp"
        android:layout_marginRight="197dp"
        android:layout_marginStart="59dp"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="50dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/foodna_tv_name"
        app:layout_constraintEnd_toStartOf="@+id/gl2"
        app:layout_constraintStart_toEndOf="@+id/gl"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/im_foodna_emoji" />

    <TextView
        android:id="@+id/foodna_tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Foodna"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/tv_getmeal"
        app:layout_constraintEnd_toStartOf="@+id/gl2"
        app:layout_constraintStart_toEndOf="@+id/gl"
        app:layout_constraintTop_toBottomOf="@+id/foodna_img_emoji" />

    <TextView
        android:id="@+id/tv_getmeal"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"
        android:text="Get any meal to your doorstep!"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/gl2"
        app:layout_constraintStart_toEndOf="@+id/gl"
        app:layout_constraintTop_toBottomOf="@+id/foodna_tv_name" />

    <Button
        android:id="@+id/foodna_btn_signin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="32dp"
        android:padding="20dp"
        android:text="SignIn"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/foodna_btn_signup"
        app:layout_constraintEnd_toStartOf="@+id/gl2"
        app:layout_constraintStart_toEndOf="@+id/gl"
        app:layout_constraintTop_toBottomOf="@+id/tv_getmeal" />

    <Button
        android:id="@+id/foodna_btn_signup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/peach"
        android:padding="20dp"
        android:text="SignUp"
        app:layout_constraintBottom_toTopOf="@+id/foodna_btn_skip"
        app:layout_constraintEnd_toStartOf="@+id/gl2"
        app:layout_constraintStart_toEndOf="@+id/gl"
        app:layout_constraintTop_toBottomOf="@+id/foodna_btn_signin" />

    <Button
        android:id="@+id/foodna_btn_skip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="8dp"
        android:text="Skip and Continue"
        android:textAllCaps="false"
        android:background="@color/transparent"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/gl2"
        app:layout_constraintStart_toEndOf="@+id/gl"
        app:layout_constraintTop_toBottomOf="@+id/foodna_btn_signup" />

    <android.support.constraint.Guideline
        android:id="@+id/gl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_begin="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/gl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_end="40dp"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
