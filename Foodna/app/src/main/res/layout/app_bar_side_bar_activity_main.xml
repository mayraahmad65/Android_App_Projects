<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ahmedpc.foodna.SideBarActivityMain">

    <include
        android:id="@+id/include"
        layout="@layout/content_side_bar_activity_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/side_bar_btn_home"
        android:layout_width="0dp"
        android:layout_marginTop="40dp"
        android:layout_height="80dp"
        android:background="@color/black"
        android:gravity="left"
        android:text="Home"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/side_bar_btn_settings"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:textAllCaps="false"
        android:background="@color/black"
        android:gravity="left"
        android:text="Settings"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/side_bar_btn_home" />

    <Button
        android:id="@+id/side_bar_btn_FAQ"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/black"
        android:gravity="left"
        android:text="About Foodna"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textAllCaps="false"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/side_bar_btn_settings" />

    <Button
        android:id="@+id/side_bae_about_foodna"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/black"
        android:gravity="left"
        android:text="FAQ"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textAllCaps="false"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/side_bar_btn_FAQ" />

    <Button
        android:id="@+id/side_bar_btn_log_out"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:textAllCaps="false"
        android:background="@color/black"
        android:gravity="left"
        android:text="Logout"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/side_bae_about_foodna" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="567dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="387dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline3">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/black"
            android:gravity="center_vertical"
            android:text="English"
            android:textColor="@color/white"
            android:textSize="30sp"/>

        <Switch
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
